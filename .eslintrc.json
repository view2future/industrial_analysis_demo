{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "marked": "readonly"
  },
  "ignorePatterns": ["frontend/**", "node_modules/**"],
  "overrides": [
    {
      "files": ["static/js/**/*.js"],
      "rules": {
        "no-unused-vars": ["warn", { "args": "none" }],
        "no-undef": "warn",
        "no-console": "off"
      }
    }
  ]
}

